{
  "name": "lionellebon.be",
  "description": "Personal website | Lionel lebon",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run check && vite build",
    "check": "npm run lint && npm run tsc",
    "dev": "vite --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --host --port 8080",
    "preview-dev": "vite build --watch & vite preview --host --port 8080",
    "prepare": "husky",
    "reset": "rm -rf node_modules/ && rm package-lock.json && npm i && npm audit fix",
    "start": "vite",
    "tsc": "npx tsc",
    "upgrade": "npm update --save && npm update --save-dev",
    "watch-css": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/styles.css --watch"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-type-animation": "^3.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}
